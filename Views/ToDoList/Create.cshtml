@model MvcToDoList.Models.ToDoList

@{
    ViewData["Title"] = "Create";
}

<h4>Create To-Do</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 col-md-7">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Model.StatusList" class="form-select"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 col-md-7">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" asp-items="Model.PriorityList" class="form-select"></select> 
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 col-md-7">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 col-md-7">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <br />
            <div class="d-flex">
                <div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-chevron-left"></i> Back</a>
                </div>
                <div class="ms-auto">
                <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
